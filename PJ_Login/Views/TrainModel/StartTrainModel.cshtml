
@{
    ViewData["Title"] = "StartTrainModel";
}

<link href="~/lib/sweetalert2/sweetalert2.min.css" rel="stylesheet" />

<style>
    body {
        background-color: #9ccdf2;
        font-family: Arial, sans-serif;
    }

    .datecontainer {
        max-width: 400px;
        margin: 0 auto;
        background-color: #ffffff;
        border-radius: 5px;
        padding: 20px;
        box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.2);
    }

    .datecontainer h3 {
        font-size: 24px;
        margin-bottom: 20px;
        text-align: center;
        color: #333333;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-group label {
        font-size: 16px;
        color: #333333;
    }

    .form-control {
        border: 1px solid #dddddd;
        border-radius: 5px;
        height: 40px;
        padding: 0 10px;
        font-size: 16px;
        color: #333333;
    }

    .form-control:focus {
        outline: none;
        border-color: #3085d6;
    }

    .form-control::placeholder {
        color: #aaaaaa;
    }

    .btn-primary {
        background-color: #3085d6;
        border: none;
        border-radius: 5px;
        height: 40px;
        padding: 0 20px;
        font-size: 16px;
        color: #ffffff;
        cursor: pointer;
    }

    .btn-primary:hover {
        background-color: #1f66b3;
    }
</style>

<div class="datecontainer">
    <h3>訓練模型</h3>
    <div class="form-group">
        <label for="startDate">開始日期：</label>
        <input type="date" class="form-control" id="startDate" name="startDate" max="@DateTime.Now.ToString("yyyy-MM-dd")" />
    </div>
    <div class="form-group">
        <label for="endDate">結束日期：</label>
        <input type="date" class="form-control" id="endDate" name="endDate" max="@DateTime.Now.ToString("yyyy-MM-dd")" onchange="checkEndDate()"  />
    </div>
    <div class="form-group">
        <label for="numberOfRecords">筆數：</label>
        <input type="number" class="form-control" id="numberOfRecords" name="numberOfRecords" min="1" placeholder="請輸入筆數" />
    </div>
    <button class="btn btn-primary" onclick="showConfirmDialog()">開始訓練</button>
</div>

<script src="~/lib/jquery/jquery.min.js"></script>
<script src="~/lib/sweetalert2/sweetalert2.min.js"></script>
<script>
    $(document).ready(function () {
        const today = new Date().toISOString().slice(0, 10);//取得今天日期yyyy-mm-dd 10碼
        document.getElementById("startDate").value = today;
        document.getElementById("endDate").value = today;
    });
    function showConfirmDialog() {
        const startDate = document.getElementById("startDate").value;
        const endDate = document.getElementById("endDate").value;
        const numberOfRecords = document.getElementById("numberOfRecords").value;
        //防呆
        if (startDate === "" || endDate === "" || numberOfRecords === "") {
            Swal.fire(
                '請選擇日期！',
                '請選擇開始日期、結束日期和筆數。',
                'warning'
            );
            return;
        }

        Swal.fire({
            title: '確認開始訓練？',
            text: `這個操作將從 ${startDate} 到 ${endDate} 開始訓練模型，總筆數為${numberOfRecords}筆，這可能需要一些時間，確定要繼續嗎？`,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: '確定',
            cancelButtonText: '取消'
        }).then((result) => {
            if (result.isConfirmed) {
                Swal.fire(
                    '開始訓練！',
                    '模型正在訓練中...靜待LINE Notify通知!',
                    'success'                   
                ).then(()=>
                {
                    window.location.href = '@Url.Action("Index", "Home")';
                });
            }
        });
    }

    function checkEndDate() {
        const startDate = new Date(document.getElementById("startDate").value);
        const endDate = new Date(document.getElementById("endDate").value);

        if (endDate < startDate) {
            document.getElementById("endDate").value = document.getElementById("startDate").value;
        }
    }
</script>