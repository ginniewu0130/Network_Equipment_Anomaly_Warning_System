
@{
    ViewData["Title"] = "Result";
}
<style>
    body {
        background-color: #9ccdf2;
    }

    h1 {
        text-align: center;
    }

    .container-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .homecontainer {
        width: 200px;
        height: 200px;
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 8px;
        margin: 20px;
        padding: 20px;
        text-align: center;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: box-shadow 0.3s ease;
        cursor: pointer;
    }

    .homecontainer:hover {
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
    }

    .homecontainer h2 {
        margin-top: 10px;
    }

    .homecontainer img {
        width: 100px;
        height: 100px;
    }
</style>
<h1>異常檢測結果</h1>
<div class="container-wrapper">
    <div class="homecontainer" id="moitoringButton" style="cursor: pointer;">
        <h2>即時監控</h2>
        <img src="~/images/monitoring.png" />
    </div>
    <div class="homecontainer" id="filterButton" style="cursor: pointer;">
        <h2>條件篩選</h2>
        <img src="~/images/select.png" />
    </div>
</div>
<script>
    document.getElementById('moitoringButton').addEventListener('click', function () {
        window.location.href = '@Url.Action("DisplayLogList2", "DisplayLog")';
    });
    document.getElementById('filterButton').addEventListener('click', function () {
        window.location.href = '@Url.Action("DisplayLogList", "DisplayLog")';
    });
</script>